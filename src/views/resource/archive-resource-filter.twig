<div class="ArchiveResource-filter">
  <div class="container">
    <div class="ArchiveResource-filterButton">
      <span class="gray small caps bold spaced white">{{__('Filter Results', 'gcf')}}</span>
      <svg aria-hidden="true" role="presentation" title="">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#chevron-down"></use>
      </svg>
    </div>
    <form class="ArchiveResource-search" role="form" action="{{site.url}}/searchff" accept-charset="UTF-8" method="get">
      <input class="ArchiveResource-searchBox small medium" id="" type="text" name="q" autocomplete="off" placeholder="{{__('Search Our Resource Library', 'gcf')}}">
      <div class="ArchiveResource-searchIcon">
        <svg aria-hidden="true" role="presentation" title="{{__('Search Our Resource Library', 'gcf')}}">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#search"></use>
        </svg>
      </div>
    </form>
  </div>
  <div class="ArchiveResource-filterPanel container">
    <div class="ArchiveResource-filterWrapper">
      {# Render Types #}
      {% include 'resource/archive-resource-filter-types.twig' %}

      {# Render Topics #}
      {% include 'resource/archive-resource-filter-topics.twig' %}

      {# Render Date #}
      {% include 'resource/archive-resource-filter-date.twig' %}

      <div class="flex-wrapper">
        <div class="Button Button--spaced Button--withIcon Button--metal ArchiveResource-filterReset">
          <svg aria-hidden="true" role="presentation" title="">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#clear"></use>
          </svg>
          <span>Clear Filter</span>
        </div>
        <div class="Button Button--spaced Button--withIcon Button--red ArchiveResource-filterSubmit">
          <svg aria-hidden="true" role="presentation" title="">
            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#refresh"></use>
          </svg>
          <span>Refine Results</span>
        </div>
      </div>
    </div>
  </div>
</div>
