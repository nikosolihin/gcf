{% set image = acf.image|serveImage %}
{% set size = acf.banner_size %}
{% set alignment = acf.alignment %}

<div class="{{'Banner'|modifiers("#{size}")}}">
  <div class="{{'Banner-image'|modifiers("#{alignment}")}} lazyload" data-bgset="{{image.xxl}} [(min-width: {{xxl}})] | {{image.xl}} [(min-width: {{xl}})] | {{image.lg}} [(min-width: {{lg}})] | {{image.md}} [(min-width: {{md}})] | {{image.sm}} [(min-width: {{sm}})] | {{image.xs}}" style="{% if alignment == 'custom' %}background-position: center {{acf.custom_alignment}}%;{% endif %}">
  </div>
</div>
