{% if data.type == "single" %}
  {% set url = data.single_url %}
{% elseif data.type == "external" %}
  {% set url = data.external_url %}
{% else %}
  {% set url = data.search_url %}
{% endif %}

{% if data.form %}
  {# Button Link #}
  <a href="{{url}}" class="{{'Button'|modifiers("#{data.display}")}}">
  {{data.label|title}}
  </a>
{% else %}
  {# Text links #}
  <a href="{{url}}" class="Link hsmall bold caps spaced faint">
    <span>{{data.label}}</span>
    <svg aria-hidden="true" role="presentation" title="Visit Link">
      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#right"></use>
    </svg>
  </a>
{% endif %}
